<%- include('partials/header', { title: "Dashboard" }) %>

<body class="bg-dorado-50 min-h-screen">
    
    <%- include('partials/navbar') %>
    <!-- Navbar -->
    

    <div class="max-w-7xl mx-auto px-6 py-8">

        <!-- Create Subject Section -->
        <div class="bg-white border border-dorado-200 rounded-xl shadow-sm p-6 mb-8">
            <h2 class="text-xl font-semibold text-dorado-800 mb-4">Create New Subject</h2>
            <p class="text-sm text-dorado-600 mb-4">
                You can create up to 3 subjects. Currently: <strong><%= subjects.length %>/3</strong>
            </p>
            
            <form id="createSubjectForm" class="flex gap-3">
                <input 
                    type="text" 
                    id="subjectName" 
                    name="name"
                    placeholder="Enter subject name (e.g., Mathematics, Physics)" 
                    class="flex-1 px-4 py-2 border border-dorado-300 rounded-md
                           focus:outline-none focus:ring-2 focus:ring-dorado-500 focus:border-dorado-500"
                    required
                    <%= subjects.length >= 3 ? 'disabled' : '' %>
                >
                <button 
                    type="submit" 
                    class="bg-dorado-600 hover:bg-dorado-700 text-white px-6 py-2 rounded-md transition-colors
                           <%= subjects.length >= 3 ? 'opacity-50 cursor-not-allowed' : '' %>"
                    <%= subjects.length >= 3 ? 'disabled' : '' %>
                >
                    Create
                </button>
            </form>
        </div>

        <!-- Subjects Grid -->
        <h2 class="text-xl font-semibold text-dorado-800 mb-4">Your Subjects</h2>

        <% if (subjects.length === 0) { %>
            <div class="bg-white border border-dorado-200 rounded-xl shadow-sm p-12 text-center">
                <div class="text-dorado-400 mb-4">
                    <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                              d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253">
                        </path>
                    </svg>
                </div>
                <p class="text-dorado-600 text-lg">No subjects created yet</p>
                <p class="text-dorado-500 text-sm mt-2">Create your first subject above to get started!</p>
            </div>
        <% } else { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% subjects.forEach(subject => { %>
                    <div class="bg-white border border-dorado-200 rounded-xl shadow-sm p-6 hover:shadow-md transition">
                        <div class="flex justify-between items-start mb-4">
                            <h3 class="text-lg font-semibold text-dorado-800"><%= subject.name %></h3>
                            <button onclick="deleteSubject('<%= subject._id %>')" 
                                    class="text-dorado-400 hover:text-red-600 transition">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                    </path>
                                </svg>
                            </button>
                        </div>
                        
                        <p class="text-sm text-dorado-600 mb-4">
                            <%= subject.notes.length %> document(s) uploaded
                        </p>
                        
                        <a href="/chat/<%= subject._id %>" 
                           class="block text-center bg-dorado-600 hover:bg-dorado-700 text-white px-4 py-2 rounded-md transition-colors">
                            Open Chat
                        </a>
                    </div>
                <% }) %>
            </div>
        <% } %>

    </div>

    <%- include('partials/toast') %> 
    <%- include('partials/footer') %> 

    <script>
        // Create Subject
        document.getElementById('createSubjectForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const name = document.getElementById('subjectName').value.trim();
            
            if (!name) {
                showToast('Please enter a subject name', 'error');
                return;
            }
            
            try {
                const response = await fetch('/api/subjects/create', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name })
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    showToast(data.message || 'Subject created successfully', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    showToast(data.message || 'Error creating subject', 'error');
                }
            } catch (error) {
                showToast('Error creating subject', 'error');
                console.error(error);
            }
        });

        // Delete Subject
        async function deleteSubject(id) {
            if (!confirm('Are you sure you want to delete this subject? All documents will be lost.')) {
                return;
            }
            
            try {
                const response = await fetch(`/api/subjects/${id}`, { 
                    method: 'DELETE' 
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    showToast(data.message || 'Subject deleted', 'success');
                    setTimeout(() => window.location.reload(), 1000);
                } else {
                    showToast(data.message || 'Error deleting subject', 'error');
                }
            } catch (error) {
                showToast('Error deleting subject', 'error');
                console.error(error);
            }
        }
    </script>

</body>
</html>
