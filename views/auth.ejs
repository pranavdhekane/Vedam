<%- include('partials/header', { title: "Login" }) %>

<body class="bg-dorado-50 min-h-screen flex items-center justify-center px-4">

    <div class="w-full max-w-md bg-white border border-dorado-200 rounded-xl shadow-sm p-8">

        <!-- App Title -->
        <h1 class="text-3xl font-semibold text-dorado-800 text-center mb-6">
            AskMyNotes
        </h1>

        <!-- Toggle -->
        <div class="flex justify-center mb-6">
            <button id="signInTab"
                class="px-4 pb-2 text-dorado-800 border-b-2 border-dorado-600 font-medium">
                Sign In
            </button>
            <button id="signUpTab"
                class="px-4 pb-2 text-dorado-500 border-b-2 border-transparent font-medium">
                Sign Up
            </button>
        </div>

        <!-- Form -->
        <form id="authForm" class="space-y-4">

            <!-- Username -->
            <div>
                <label class="block text-sm text-dorado-700 mb-1">Username</label>
                <input type="text" name="username" required
                    class="w-full px-3 py-2 border border-dorado-300 rounded-md
                           focus:outline-none focus:ring-2 focus:ring-dorado-500 focus:border-dorado-500">
            </div>

            <!-- Password -->
            <div>
                <label class="block text-sm text-dorado-700 mb-1">Password</label>
                <input type="password" name="password" required
                    class="w-full px-3 py-2 border border-dorado-300 rounded-md
                           focus:outline-none focus:ring-2 focus:ring-dorado-500 focus:border-dorado-500">
            </div>

            <!-- Confirm Password (Hidden by default) -->
            <div id="confirmPasswordField" class="hidden">
                <label class="block text-sm text-dorado-700 mb-1">Confirm Password</label>
                <input type="password" name="confirmPassword"
                    class="w-full px-3 py-2 border border-dorado-300 rounded-md
                           focus:outline-none focus:ring-2 focus:ring-dorado-500 focus:border-dorado-500">
            </div>

            <!-- Submit -->
            <button type="submit"
                class="w-full bg-dorado-600 hover:bg-dorado-700
                       text-white py-2 rounded-md transition-colors duration-200">
                Sign In
            </button>

        </form>
    </div>

    <%- include('partials/toast') %>

<script src="/js/auth.js"></script>

</body>
</html>